{
    "name": "nilesh/performance-optimisation",
    "description": "A WordPress plugin for performance optimization, including caching, HTML/CSS/JS minification, and image optimization.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Nilesh Kanzariya",
            "email": "nilesh.kanzariya912@gmail.com",
            "homepage": "https://profiles.wordpress.org/nileshkanzariya/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "wordpress",
        "plugin",
        "performance",
        "optimization",
        "cache",
        "minify",
        "images",
        "webp",
        "avif"
    ],
    "support": {
        "issues": "https://github.com/example-repo/performance-optimisation/issues",
        "source": "https://github.com/example-repo/performance-optimisation"
    },
    "require": {
        "voku/html-min": "^4.5",
        "matthiasmullie/minify": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "lint": "phpcs . --standard=WordPress --extensions=php --ignore=vendor/,node_modules/,build/",
        "lint-fix": "phpcbf . --standard=WordPress --extensions=php --ignore=vendor/,node_modules/,build/",
        "test": "phpunit"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true
        },
        "platform": {
            "php": "7.4"
        }
    },
    "extra": {
        "wordpress-plugin-slug": "performance-optimisation",
        "primary-branch": "main",
        "cleanup": {
            "dirs": ["bin", "tests", "docs"],
            "exclude": ["*.md", "*.yml", "*.xml", "tests", "docs"]
        }
    }
}